<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fireblack.musicplayer.activity.AboutActivity">

    <include layout="@layout/scan_setting_top"
             android:id="@+id/bar_setting_top"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="@string/about_content"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="Github开源地址"
        android:gravity="center_horizontal"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="https://github.com/FireB1ack/MusicPlayer.git"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />


</LinearLayout>
